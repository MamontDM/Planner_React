{
    "name": "planner-app",
    "version": "1.0.0",
    "private": true,
    "scripts": {
      "start:backend": "npm start --prefix planner-app\backend",
      "start:frontend": "npm start --prefix planner-app\frontend",
      "start": "concurrently -n \"FRONT,BACK\" -c \"blue,green\" \"npm run start:frontend\" \"npm run start:backend\"",
      "build:frontend": "npm run build --prefix frontend"
    },
    "devDependencies": {
      "concurrently": "^9.1.0"
    }
  }